{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    ':combinePatchMinorReleases',
  ],
  platformCommit: true,

  packageRules: [
    {
      matchManagers: [
        'pip_requirements',
      ],
      reviewers: [
        'team:team3',
      ],
    },
    {
      matchPaths: [
        '**',
      ],
      reviewers: [
        'team:team3',
      ],
    },
    {
      matchPaths: [
        'folder1/subfolder1/**',
      ],
      additionalReviewers: [
        'team:team4',
      ],
    },
  ],
}
